@model ProductDetailModel

<div class="row">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="~/images/@Model.Product.ImageUrl" class="img-fluid">
            </div>
            <div class="col-md-9">
                
                    <h5 class="mb-3">@Model.Product.Name</h5> <hr>
                    
                    @foreach (var item in Model.Categories)
                    {
                        
                            <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
                        
                    }
                    
                    
                    <div class="mb-3"><h4 class="text-primary mb-3">Price: @Model.Product.Price TL</h4></div>
                    
                     @if(User.Identity.IsAuthenticated){
                        @*<a class="btn btn-primary btn-sm" asp-controller="shop" asp-action="addtocart" asp-route-id="@Model.ProductID">Add to Cart</a>*@
                        <form asp-controller="Cart" asp-action="AddToCart" method="POST" class="form-inline">
                           <input type="hidden" name="productId" value="@Model.Product.ProductID">
                           <div class="input-group mb-3">
                                <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:100px">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-primary btn-sm">Add To Cart</button>
                                </div>
                                
                                
                           </div> 
                        </form>
                    }
                    
            </div>
        </div>
          </div>

        <div class="row">
            <div class="col-md-12 p-5">
            <p class="card-text">@Html.Raw(Model.Product.Description)</p>
            </div>
        </div>
