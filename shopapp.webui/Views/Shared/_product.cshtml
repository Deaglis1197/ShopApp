@model Product

<div class="card mb-2">
    <div class="card-img-top">
        <img class="card-img-top" src="~/images/@Model.ImageUrl" alt="">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Html.Raw(Model.Description)</p>
                <small class="text-muted">
                    <i class="fas fa-lira-sign"></i>@Model.Price
                </small>
                
                <div class="card-footer text-center">
                    <a class="btn btn-primary btn-sm" asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url">Details</a>
                    @if(User.Identity.IsAuthenticated){
                        @*<a class="btn btn-primary btn-sm" asp-controller="shop" asp-action="addtocart" asp-route-id="@Model.ProductID">Add to Cart</a>*@
                        <form asp-controller="Cart" asp-action="AddToCart" method="POST" style="display:inline;">
                           <input type="hidden" name="productId" value="@Model.ProductID">
                           <input type="hidden" name="quantity" value="1">
                           <button type="submit" class="btn btn-primary btn-sm">Add To Cart</button> 
                        </form>
                    }
                    
                </div>
                </div>
    </div>
</div>

@section Scripts{
  <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

